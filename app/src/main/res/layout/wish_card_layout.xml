<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:id="@+id/wish_content"
            android:background="?attr/selectableItemBackground"
            android:clickable="true">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@color/colorPrimary"
                android:id="@+id/wish_image"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/wish_title"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/wish_image"
                android:text="Wish Title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:id="@+id/wish_user"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/wish_image"
                android:layout_below="@+id/wish_title"
                android:text="abc@abc.com"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/wish_date"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/wish_image"
                android:layout_below="@+id/wish_user"
                android:text="14/11/1995"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:id="@+id/wish_tag"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/wish_image"
                android:text="Tags: Books, Car"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Like"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/like_btn"
                android:padding="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/help_btn"
                android:padding="10dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"/>
        </LinearLayout>

    </LinearLayout>



</android.support.v7.widget.CardView>